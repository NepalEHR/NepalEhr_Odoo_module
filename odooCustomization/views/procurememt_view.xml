<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
<record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.purchase_order_form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

              <xpath expr="//field[@name='picking_type_id']" position="replace">

              </xpath>  
    <xpath expr="//field[@name='date_order']" position="after">
                
                  <field name="picking_type_id" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': ['|', ('invoice_status','=', 'invoiced'), ('state', '=', 'done')]}"/>
                                    
                </xpath>  

          
            </field>
        </record>


   
</data>

</odoo>

