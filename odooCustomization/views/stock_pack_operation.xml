<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="inherit_stock_pack_operation_lots_form" model="ir.ui.view">
		<field name="name">inherit.stock.pack.operation.lots.form</field>
		<field name="model">stock.pack.operation</field>
		<field name="inherit_id" ref="stock.view_pack_operation_lot_form"/>
		<field name="arch" type="xml"> 
			<xpath expr="//field[@name='pack_lot_ids']/tree/field[@name='lot_id']" position="replace">
				<field name="lot_id" domain="[('product_id', '=', product_id),('expired_state', '!=', 'EXPIRED'),('stock_forecast_temp','>',0)]"/>
               
			</xpath> 
			 

            
		</field>
	</record>
	
 
</odoo>
