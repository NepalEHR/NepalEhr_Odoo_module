<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_invoice_document_inherit" inherit_id="bahmni_insurance_odoo.report_invoice_document_inherit">

<div name="invoice_address" position="replace">
<br></br>
<hr></hr>
    <div name="invoice_address" class="col-12 col-xs-12 pull-left" style="font-size:20px;">
        <div class="row"> 
            <div class="col-4 col-xs-4 ">
                    <strong>
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": [ "name"], "no_marker": True}' />
                      <!-- <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span> -->
                    </strong>
                        <span t-esc="o.calculate_age(o.partner_id.birth_date)"/>Y/<span t-field="o.partner_id.gender"/>
            </div>

            <div class="col-8 col-xs-8" >
                <span t-esc="o.short_address(o.partner_id.detail_address)" />
            </div>
        </div>
        <hr></hr>
        <div t-if="o.date_invoice">
                    <strong>Invoice Date:</strong>
                                    <p>  <span t-field="o.date_invoice"/>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/> 
                    (<span t-esc="o.convert_ad_to_bs()"/>) </p>

        </div>
    </div>
</div>
</template> 

</data>
</odoo>
 